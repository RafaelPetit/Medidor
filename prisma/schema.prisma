generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int          @id @default(autoincrement())
  name            String
  created_at      DateTime      @default(now())
  updated_at      DateTime      @updatedAt
  status          Status
  measures        Measure[]
}

model Measure {
  id               Int           @id @default(autoincrement())
  measure_uuid     String        @unique @default(uuid())
  measure_datetime DateTime
  measure_value    Float
  has_confirmed    Boolean       @default(false)
  image_url        String
  measure_type     Measure_Type
  status           Status
  customer_code    Int
  user             User          @relation(fields: [customer_code], references: [id])

  @@index([customer_code, measure_type, measure_datetime], name: "customer_code_measure_unique")
  @@unique([customer_code, measure_type, measure_datetime])
}

enum Measure_Type {
  WATER
  GAS
}

enum Status{
  ACTIVE
  INACTIVE
}
